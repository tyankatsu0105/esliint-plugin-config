{
  "name": "eslint-plugin-config",
  "version": "0.0.0",
  "description": "ESLint rules for config files",
  "keywords": [
    "eslint",
    "eslintplugin",
    "typescript"
  ],
  "homepage": "https://github.com/tyankatsu0105/eslint-plugin-config#readme",
  "bugs": {
    "url": "https://github.com/tyankatsu0105/eslint-plugin-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tyankatsu0105/eslint-plugin-config.git"
  },
  "license": "MIT",
  "author": "tyankatsu <frips.ryilsufupe+dev@gmail.com> (https://tyankatsu.netlify.com/)",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project ./tsconfig.build.json",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "gen:rule": "hygen generate rule",
    "gen:sandbox": "hygen generate sandbox",
    "lint-staged": "lint-staged",
    "release": "shipjs prepare",
    "release:prepare": "shipjs prepare",
    "release:trigger": "shipjs trigger",
    "sandbox": "eslint ./sandbox/**/*  --rulesdir dist/rules",
    "test": "mocha --require ts-node/register tests/lib/**/*.spec.ts",
    "typecheck": "npx tsc --project ./tsconfig.build.json --noEmit",
    "update": "ts-node tools/update.ts"
  },
  "lint-staged": {
    "*.md": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "package.json": [
      "npx sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@typescript-eslint/experimental-utils": "^3.6.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/eslint": "^7.2.0",
    "@types/mocha": "^7.0.2",
    "@types/prettier": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "chai": "^4.2.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "hygen": "^6.0.4",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "prettier": "^2.0.5",
    "shipjs": "^0.20.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "peerDependencies": {
    "eslint": "^7.0.0"
  },
  "engines": {
    "node": "^10 || ^12 || ^13 || >=14"
  }
}
